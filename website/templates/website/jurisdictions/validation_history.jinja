<div {% if destination != 'dialog' %}class="black_tooltip" {% endif %}>
    <p>
        {% if answer.creator.is_superuser == 0 %}
            Suggested by {{answer.creator.get_profile().get_display_name()}} on {{create_datetime}}
        {% else %}
            Added by a system administrator on {{approval_datetime}}
        {% endif %}
        </br>
        {% if organization != None %}
            Member of {% if request.user.is_authenticated() and destination=='dialog' %}<a href='{{organization.get_clickable_website()}}' target="_blank" >{{organization.get_display_website()}}</a>{% else %}{{organization.name}}{% endif %}
        {% endif %}
    </p>
    {% if vote | length > 0 %}
    <p>
        Verified as accurate on {{approval_datetime}}
    </p>   
    {% endif %}     
</div>  
